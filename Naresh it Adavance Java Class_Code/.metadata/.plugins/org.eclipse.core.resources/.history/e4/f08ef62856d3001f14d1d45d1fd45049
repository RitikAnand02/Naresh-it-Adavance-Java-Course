package com.test;

package com.test;

import java.sql.*;
public class DBCon7 {
	public static void main(String[] args) {
        try {
        	 Connection con = DriverManager.getConnection
        	("jdbc:oracle:thin:@localhost:1521:orcl","system","1234");
        			           //Creating Connection
        	 Statement stm = con.createStatement
        			 (ResultSet.TYPE_SCROLL_INSENSITIVE,
        					 ResultSet.CONCUR_READ_ONLY);
        	 ResultSet rs = stm.executeQuery
        			 ("select * from Product52");
        	 System.out.println("****Table data in reverse*****");
        	 rs.afterLast();//Cursor pointing after last row
        	 while(rs.previous()) {
        		 System.out.println(rs.getString(1)+"\t"
        				 +rs.getString(2)+"\t"
        				 +rs.getString(3)+"\t"
        				 +rs.getFloat(4)+"\t"
        				 +rs.getInt(5));
        	 }//end of loop
        	 PreparedStatement ps = con.prepareStatement
        			 ("select * from BookDetails52",1004,1007);
        	 ResultSet rs2 = ps.executeQuery();
        	 System.out.println("****Last_Row****");
        	 rs2.last();
        	 System.out.println(rs2.getString(1)+"\t"
    				 +rs2.getString(2)+"\t"
    				 +rs2.getString(3)+"\t"
    				 +rs2.getFloat(4)+"\t"
    				 +rs2.getInt(5));
        	 System.out.println("****Frist_Row****");
        	 rs2.first();
        	 System.out.println(rs2.getString(1)+"\t"
    				 +rs2.getString(2)+"\t"
    				 +rs2.getString(3)+"\t"
    				 +rs2.getFloat(4)+"\t"
    				 +rs2.getInt(5));
        	 System.out.println("****Absolute****");
        	 rs2.absolute(2);
        	 System.out.println(rs2.getString(1)+"\t"
    				 +rs2.getString(2)+"\t"
    				 +rs2.getString(3)+"\t"
    				 +rs2.getFloat(4)+"\t"
    				 +rs2.getInt(5));
        }catch(Exception e) {
        	e.printStackTrace();
        }
	}
}

